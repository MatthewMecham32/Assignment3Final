@{
    ViewBag.Title = "Enter a Movie";
}

@model Assignment3Final.Models.Movie

<form asp-action="EnterMovie" method="post">
    <div asp-validation-summary="All">
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <label class="form-group" asp-for="Category">Category:</label>
                <input class="form-control" asp-for="Category" />
            </div>

            <div class="col-md-4 mb-3">
                <label class="form-group" asp-for="Title">Title:</label>
                <input class="form-control" asp-for="Title" />
            </div>

                <div class="col-md-4 mb-3">
                    <label class="form-group" asp-for="Year">Year:</label>
                    <input class="form-control" asp-for="Year" />
                </div>
        </div>

            <div class="form-row">
                <div class="col-md-4 mb-3 text-center">
                    <label asp-for="Director">Director:</label>
                    <input asp-for="Director" />
                </div>

                <div class="col-md-4 mb-3 text-center">
                    <label asp-for="LentTo">Lent To:</label>
                    <input asp-for="LentTo" />
                </div>

                <div class="col-md-4 mb-3 text-center">
                    <label asp-for="LentTo">Notes:</label>
                    <input asp-for="Notes" />
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-6 mb-3 text-right">
                    <label asp-for="Rating">Rating:</label>
                    <select asp-for="Rating">
                        <option value="">Select One</option>
                        <option value="G">G</option>
                        <option value="PG">PG</option>
                        <option value="PG-13">PG-13</option>
                        <option value="R">R</option>
                    </select>
                </div>

                <div class="col-md-6 mb-3 text-left">
                    <label asp-for="Edited">Edited:</label>
                    <select asp-for="Edited">
                        <option value="">Select One</option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>
            </div>


            <div class="col-md-7 mb-3 text-right ">
                <button class ="btn-outline-primary"type="submit">Submit your Movie</button>
            </div>
        </div>
</form>