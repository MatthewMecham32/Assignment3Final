@{
    ViewBag.Title = "Movie List";
}

@model MovieListViewModel

<div>
    <h2>Joel's Movie List</h2>

    <table class="table table-bordered table-striped">

        <thead>
            <tr>
                <th>Title</th>
                <th>Director</th>
                <th>Year</th>
                <th>Rating</th>
                <th>Category</th>
                <th>Edit</th>
                <th>Delte</th>
            </tr>
        </thead>


        <div class="text-center">
            @foreach (var x in Model.Movies)
            {
                <partial name="MovieSummary" model="x" />
            }
        </div>
        </table>


</div>
